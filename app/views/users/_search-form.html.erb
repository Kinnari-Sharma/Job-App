<%= form_tag(jobs_path, method: "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search],
                                placeholder: "Search Jobs",
                                class: "form-field" %>
  <%= text_field_tag :search_location, params[:search_location],
                                  placeholder: "Search location",
                                  class: "form-field"  %>
  <%= select_tag 'category',
         options_for_select(Category.all.collect{ |c| c.job_category}, 
                                            selected: params[:category] ),
         include_blank: "Categories", class: "form-field" %>

  <%= submit_tag "Search", name: nil %>
<% end %>