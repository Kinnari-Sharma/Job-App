<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>

    <% if current_user == @user && !current_user.admin? %>
      <%= link_to "Post a Job!", new_job_path, class: "btn btn-primary form-control post-btn" %> 
      <%= render 'shared/aside'%>
    <% end %>
  </aside>
  
  <div class="col-md-8">

    <%= render 'recruiter' %>
    
  </div>
</div>