<li>
	<% unless user.role == 'admin' %>
	  <%= gravatar_for user, size: 50 %>
	  <%= link_to user.name, user %><br>
	  <%= user.role %>
	  <% if current_user.role == "admin" && !current_user?(user) %>
	    | <%= link_to "delete", user, method: :delete,
	                                  data: { confirm: "You sure?" } %>
	  <% end %>
	<% end %>
</li>