<%= form_for @job do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
		<%= f.label :title, class: "required" %>
		<%= f.text_field :title, class: "form-control" %>
  </div>

	<div class="form-group">
		<%= f.label :description, class: "required" %>
		<%= f.text_area :description, class: "form-control", size:"10x5"%>
	</div>

	<div class = "form-group">
		<%= f.label :sector %>
		<%= f.select(:sector, Category.all.collect {|p| [p.job_category]}, class: "form-control") %>

		<%= f.label :jobtype %>
		<%= f.select(:jobtype, Jobtype.all.collect {|p| [p.jobtype]} , class: "form-control") %>
	</div>

	<div class="form-group">
		<%= f.label :cname, "Company Name", class: "required" %>
		<%= f.text_field :cname, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :url, class: "required" %>
		<%= f.url_field :url, class: "form-control" %>
	</div> 			

	<div class="form-group">
		<%= f.label :contactmail, "Contact Email", class: "required" %>
		<%= f.email_field :contactmail, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :location, "Job Location", class: "required" %>
		<%= f.select(:location, ["Other", "Delhi", "Mumbai", "Kolkata", "Chennai", "Ahmedabad", "Agartalla", 
			"Agra", "Ajmer", "Amritsar", "Aurangabad", "Baksa", "Banglore", "Bokaro", "Bundi", "Buxar", 
			"Chandigarh", "Coimbatore", "Cuttack", "Darjeeling", "Durg", "Firozpur", "Gurgaon", "Howrah",
			 "Hydrabad", "Indore", "Jaipur", "Meerut", "Murshidabad", "Nashik", "Noida", "Pune", "Raipur","Ranchi",
			  "Shimla", "Thirubananthapuram", "Udaipur", "Patna", "Vishakhapatnam" ], class: "form-control") %>
	</div>

	<%= f.submit "Post", class: "btn btn-primary form-control" %>

<% end %>