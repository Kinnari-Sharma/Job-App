<% provide(:title, "View Job") %>
<h1 class="title"><%= @job.title %></h1>

<div class="row">
	<div class="col-md-8">
		<div class="job">
		  <h3>Description:</h3>
		  <p class="desc"><%= @job.description %></p>
		  <span class="type">Sector: </span> <%= @job.sector %> <br>
		  <span class="type">Job Type: </span> <%= @job.jobtype %> <br>
		  <span class="type">Company: </span> <%= @job.cname %> <br>
		  <span class="type">Email: </span> <%= @job.contactmail %> <br>
		  <span class="type">Location: </span> <%= @job.location %> <br>
		  <span class="type">Visit Us: </span> <%= link_to "#{@job.url}", @job.url %> <br>
		  <span class="type">Posted by: </span> <%= link_to "#{@job.user.name}", @job.user %> <br>
		  <% unless @job.approved? %>
   		  <span>Not yet approved by admin! </span> 
   		<% end %>
		</div>
			
		<% unless current_user.admin? %>
			<% if current_user.id == @job.user_id %>
				<%= render 'applicants_list' %>
			<% else %>
			  <%= render 'apply' %>
			<% end %>		
		<% end %>
	</div>

	<div class="col-md-4 other-applicants">
		<% if (!current_user.admin?) && !@applicants.empty? && applied(@job.id, current_user.id)%>
			<h3>Other Applicants</h3>
			<% @applicants.each do |user| %>
	    	<% if user.id != current_user.id  %>
	     		<li>
	        	<span class="name"><%= user.name %></span> <%= link_to "Message", conversations_path(sender_id: current_user.id, recipent_id: user.id, job_id: @job.id), method: :post%>
	      	</li>
	    	<% end %>
	  	<% end %>
  	<% end %>
	</div>
</div>