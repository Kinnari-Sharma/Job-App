

<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "job app", root_path, id: "logo" %>
    
    <nav>
      <div class="search">
        <%= form_tag(jobs_path, method: "get", id: "search-form") do %>
          <%= text_field_tag :search, params[:search], placeholder: "Search Jobs", class: "form-field" %>
          <%= text_field_tag :search_location, params[:search_location], placeholder: "Search location",                                                                       class: "form-field"  %>
          <%= select_tag 'category', options_for_select(Category.all.collect{ |c| c.job_category} ),
                                              include_blank: "Categories", class: "form-field" %>
          <%= submit_tag "Search", name: nil %>
        <% end %>
      </div>
      <ul class="nav navbar-nav navbar-right">
        <li>
          <% if (logged_in? && current_user.admin?) %>
            <%= link_to "Home", admin_path, class: "text" %>
          <% else %>
            <%= link_to "Home", root_path, class: "text" %>
          <% end %>
          </li>
        <li>
          <% unless (logged_in? && current_user.admin?)%>
            <%= link_to "Help", help_path, class: "text" %>
          <% end %>
        </li>
        <% if logged_in? %>
          <% if current_user.admin? %>
            <li><%= link_to "Users", admin_users_path, class: "text" %></li>
          <% else %>
            <li><%= link_to "Conversations", conversations_path, class: "text" %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle text" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li class="text"><%= link_to "Log in", login_path, class: "text" %></li>
          <li><%= link_to 'Connect with LinkedIn', '/auth/linkedin', class: "text" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
