<%= form_for @postvacancy do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
		<%= f.label :name, class: "required" %>
		<%= f.text_field :name, class: "form-control" %>
  </div>

	<div class = "form-group">
		<%= f.label :category %>
		<%= f.select(:category, ["Other", "Manufacturing", "Information Technology",
															 "Banking", "Core"], class: "form-control") %>
	</div>

	<div class="form-group">
		<%= f.label :description, "Introduce yourself", class: "required" %>
		<small class="small">(include your skills, work-experience, etc)</small>
		<%= f.text_area :description, class: "form-control", size:"10x5"%>
	</div>

	<div class="form-group">
		<%= f.label :phone, "Phone No.", class: "required" %>
		<%= f.text_field :phone, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :city, class: "required" %>
		<%= f.text_field :city, class: "form-control" %>
	</div>

	<%= f.submit "Post", class: "btn btn-primary form-control" %>

<% end %>